<layout version="0.1.0">
    <!-- Catalog rule -->
	<promotionalgiftadmin_adminhtml_catalogrule_index>
        <reference name="content">
            <block type="promotionalgift/adminhtml_catalogrule" name="catalogrule" />
        </reference>
    </promotionalgiftadmin_adminhtml_catalogrule_index>
	<promotionalgiftadmin_adminhtml_catalogrule_giftitem>
    	<block type="core/text_list" name="root">
    		<block type="promotionalgift/adminhtml_catalogrule_edit_tab_giftitem" name="promotionalgift.catalogrule.edit.tab.giftitem"/>
    		<block type="adminhtml/widget_grid_serializer" name="related_grid_serializer">
				<action method="initSerializerBlock">
					<grid_block_name>promotionalgift.catalogrule.edit.tab.giftitem</grid_block_name>
					<data_callback>getSelectedRelatedGiftitems</data_callback>
					<hidden_input_name>catalogrule_giftitem</hidden_input_name>
					<reload_param_name>pcgiftitem</reload_param_name>
				</action>
				<action method="addColumnInputName">
					<input_name>gift_qty</input_name>
				</action>
            </block>
    	</block>
    </promotionalgiftadmin_adminhtml_catalogrule_giftitem>
    <promotionalgiftadmin_adminhtml_catalogrule_giftitemgrid>
    	<block type="core/text_list" name="root">
    		<block type="promotionalgift/adminhtml_catalogrule_edit_tab_giftitem" name="promotionalgift.catalogrule.edit.tab.giftitem"/>
    	</block>
    </promotionalgiftadmin_adminhtml_catalogrule_giftitemgrid>
	
	<!--end catalog rule-->
	
	<!-- Shoppingcart rule -->
	<promotionalgiftadmin_adminhtml_shoppingcartrule_index>
        <reference name="content">
            <block type="promotionalgift/adminhtml_shoppingcartrule" name="shoppingcartrule" />
        </reference>
    </promotionalgiftadmin_adminhtml_shoppingcartrule_index>
	<promotionalgiftadmin_adminhtml_shoppingcartrule_giftitem>
    	<block type="core/text_list" name="root">
    		<block type="promotionalgift/adminhtml_shoppingcartrule_edit_tab_giftitem" name="promotionalgift.shoppingcartrule.edit.tab.giftitem"/>
    		<block type="adminhtml/widget_grid_serializer" name="related_grid_serializer">
				<action method="initSerializerBlock">
					<grid_block_name>promotionalgift.shoppingcartrule.edit.tab.giftitem</grid_block_name>
					<data_callback>getSelectedRelatedGiftitems</data_callback>
					<hidden_input_name>shoppingcartrule_giftitem</hidden_input_name>
					<reload_param_name>psgiftitem</reload_param_name>
				</action>
				<action method="addColumnInputName">
					<input_name>gift_qty</input_name>
				</action>
            </block> 
    	</block>
    </promotionalgiftadmin_adminhtml_shoppingcartrule_giftitem>
    <promotionalgiftadmin_adminhtml_shoppingcartrule_giftitemgrid>
    	<block type="core/text_list" name="root">
    		<block type="promotionalgift/adminhtml_shoppingcartrule_edit_tab_giftitem" name="promotionalgift.shoppingcartrule.edit.tab.giftitem"/>
    	</block>
    </promotionalgiftadmin_adminhtml_shoppingcartrule_giftitemgrid>
	
	<!--end shoppingcart rule-->
	
	<!-- option promotionalgift -->
		
	<!-- end option promotionalgift -->
</layout>