<config>
    <sections>
        <gri_vip translate="label" module="gri_vip">
            <label>VIP</label>
            <tab>customer</tab>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label" module="gri_vip">
                    <label>Enable/Disable OfflineVIP</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled_offlinevip translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_offlinevip>
                    </fields>
                </general>
                <requirement translate="label" module="gri_vip">
                    <label>VIP Requirement</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <silver_entry>
                            <label>Silver Level Entry Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Purchase amount in last 24 hours to upgrade to this level. Default 2500.</comment>
                        </silver_entry>
                        <silver_upgrade>
                            <label>Silver Level Upgrade Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Reward points gained in last 3 months to upgrade to this level. Default 2500.</comment>
                        </silver_upgrade>
                        <silver_renewal>
                            <label>Silver Level Annual Renewal Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Reward points gained in last 12 months to keep in this level. Default 2500.</comment>
                        </silver_renewal>
                        <gold_entry>
                            <label>Gold Level Entry Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Purchase amount in last 24 hours to upgrade to this level. Default 20000.</comment>
                        </gold_entry>
                        <gold_upgrade>
                            <label>Gold Level Upgrade Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Reward points gained in last 12 months to upgrade to this level. Default 20000.</comment>
                        </gold_upgrade>
                        <gold_renewal>
                            <label>Gold Level Annual Renewal Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Reward points gained in last 12 months to keep in this level. Default 20000.</comment>
                        </gold_renewal>
						<platinum_entry>
							<label>Platinum Level Entry Requirement</label>
							<frontend_type>text</frontend_type>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Purchase amount in last 24 hours to upgrade to this level. Default 50000.</comment>
						</platinum_entry>
                        <platinum_upgrade>
                            <label>Platinum Level Upgrade Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Reward points gained in last 12 months to upgrade to this level. Default 50000.</comment>
                        </platinum_upgrade>
                        <platinum_renewal>
                            <label>Platinum Level Annual Renewal Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Reward points gained in last 12 months to keep in this level. Default 20000.</comment>
                        </platinum_renewal>
                    </fields>
                </requirement>
                <customer_groups translate="label" module="gri_vip">
                    <label>VIP Level to Customer Group</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <general translate="label">
                            <label>General</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </general>
                        <offlinevip translate="label">
                            <label>Offline VIP</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </offlinevip>
                        <silver translate="label">
                            <label>Silver</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </silver>
                        <gold translate="label">
                            <label>Gold</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </gold>
                        <platinum translate="label">
                            <label>Platinum</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </platinum>
                    </fields>
                </customer_groups>
                <discount translate="label" module="gri_vip">
                    <label>VIP Discount Percent (%)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <offlinevip translate="label">
                            <label>Offline VIP</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </offlinevip>
                        <silver translate="label">
                            <label>Silver</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </silver>
                        <gold translate="label">
                            <label>Gold</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </gold>
                        <update_vip_group_price translate="button_label">
                            <label></label>
                            <button_label>Update Vip Group Price</button_label>
                            <frontend_model>gri_catalogcustom/adminhtml_catalogcustom_system_config_UpdateVipGroupPrices</frontend_model>
                            <sort_order>28</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </update_vip_group_price>
                    </fields>
                </discount>
            </groups>
        </gri_vip>
    </sections>
</config>
