        <td valign="middle" align="center" style="width:100px;font-family:Arial, Helvetica, sans-serif;font-size:12px; padding:7px 9px 9px 9px; border-left:1px solid #EAEAEA; border-bottom:1px solid #EAEAEA; border-right:1px solid #EAEAEA;"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail')->resize(75, 75) ?>" border="0" height="75" width="75" alt="<?php echo $this->htmlEscape($_product->getName()) ?>" /></td>
