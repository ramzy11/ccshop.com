                        <class>hamper/observer</class>
                        <method>loadProductOptions</method>
                    </hamper_observer>
                </observers>
            </catalog_product_collection_load_after>-->
            <product_option_renderer_init>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>initOptionRenderer</method>
                    </hamper_observer>
                </observers>
            </product_option_renderer_init>
        </events>
    </frontend>
    <admin>
        <routers>
            <hamper>
                <use>admin</use>
                <args>
                    <module>Gri_Hamper_Adminhtml</module>
                    <frontName>gri_hamper</frontName>
                </args>
            </hamper>
        </routers>
        <fieldsets>
            <catalog_product_dataflow>
                <is_in_stock>
                    <product_type>
                        <hamper/>
                    </product_type>
                </is_in_stock>
                <manage_stock>
                    <product_type>
                        <hamper/>
                    </product_type>
                </manage_stock>
            </catalog_product_dataflow>
        </fieldsets>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Gri_Hamper>
                    <files>
                        <default>Gri_Hamper.csv</default>
                    </files>
                </Gri_Hamper>
            </modules>
        </translate>
        <layout>
            <updates>
                <hamper>
                    <file>hamper.xml</file>
                </hamper>
            </updates>
        </layout>
        <sales>
            <order>
                <create>
                    <available_product_types>
                        <hamper/>
                    </available_product_types>
                </create>
            </order>
        </sales>
        <events>
            <!--<catalog_product_prepare_save>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>prepareProductSave</method>
                    </hamper_observer>
                </observers>
            </catalog_product_prepare_save>-->
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>appendHamperSelectionData</method>
                    </hamper_observer>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <catalog_model_product_duplicate>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>duplicateProduct</method>
                    </hamper_observer>
                </observers>
            </catalog_model_product_duplicate>
            <catalog_product_edit_action>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>setAttributeTabBlock</method>
                    </hamper_observer>
                </observers>
            </catalog_product_edit_action>
            <catalog_product_new_action>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>setAttributeTabBlock</method>
                    </hamper_observer>
                </observers>
            </catalog_product_new_action>
        </events>
    </adminhtml>
