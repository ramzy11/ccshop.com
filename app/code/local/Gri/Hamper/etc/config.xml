                        <price_type/>
                        <shipment_type/>
                        <weight_type/>
                        <sku_type/>
                    </product_attributes>
                </item>
            </quote>
        </sales>-->
        <pdf>
            <invoice>
                <hamper>bundle/sales_order_pdf_items_invoice</hamper>
            </invoice>
            <shipment>
                <hamper>bundle/sales_order_pdf_items_shipment</hamper>
            </shipment>
            <creditmemo>
                <hamper>bundle/sales_order_pdf_items_creditmemo</hamper>
            </creditmemo>
        </pdf>
        <events>
            <bundle_product_view_config>
                <observers>
                    <hamper>
                        <class>hamper/observer</class>
                        <method>updateBundleProductOptions</method>
                    </hamper>
                </observers>
            </bundle_product_view_config>
        </events>
    </global>
    <frontend>
        <routers>
            <hamper>
                <use>standard</use>
                <args>
                    <module>Gri_Hamper</module>
                    <frontName>hamper</frontName>
                </args>
            </hamper>
        </routers>
        <translate>
            <modules>
                <Gri_Hamper>
                    <files>
                        <default>Gri_Hamper.csv</default>
                    </files>
                </Gri_Hamper>
            </modules>
        </translate>
        <layout>
            <updates>
                <hamper>
                    <file>gri/hamper.xml</file>
                </hamper>
            </updates>
        </layout>
        <product>
            <collection>
                <attributes>
                    <price_view/>
                    <price_type/>
                </attributes>
            </collection>
        </product>
        <events>
            <!--<catalog_product_upsell>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>appendUpsellProducts</method>
                    </hamper_observer>
                </observers>
            </catalog_product_upsell>-->
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <hamper_observer>
                        <class>hamper/observer</class>
                        <method>appendHamperSelectionData</method>
                    </hamper_observer>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <!--<catalog_product_collection_load_after>
                <observers>
