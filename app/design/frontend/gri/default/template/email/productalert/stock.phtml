        <td valign="middle" align="center" style="font-family:Arial, Helvetica, sans-serif;font-size:12px; padding:7px 9px 9px 9px; border-left:1px solid #EAEAEA; border-bottom:1px solid #EAEAEA; border-right:1px solid #EAEAEA;"><a href="<?php echo $_product->getProductUrl() ?>" style="color:#999;text-decoration:underline"><?php echo $this->__('Shop Now') ?></a></td>
    </tr>
<?php endforeach; ?>
</table>
<?php endif; ?>
