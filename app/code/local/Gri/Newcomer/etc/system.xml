<?xml version="1.0"?>
<config>
    <sections>
        <newcomer translate="label" module="newcomer">
            <label>Newcomer</label>
            <tab>gri</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <popup translate="label">
                    <label>Popup Banner Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <from translate="label">
                            <label>From Date</label>
                            <frontend_type>date</frontend_type>
                            <frontend_model>newcomer/adminhtml_system_config_date</frontend_model>
                            <comment><![CDATA[Date format: YYYY-m-d.<br/>Empty means accept any.]]></comment>
                            <format>yyyy-M-d</format>
                            <sort_order>20</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </from>
                        <to translate="label">
                            <label>To Date</label>
                            <frontend_type>date</frontend_type>
                            <frontend_model>newcomer/adminhtml_system_config_date</frontend_model>
                            <comment><![CDATA[Date format: YYYY-m-d.<br/>Empty means accept any.]]></comment>
                            <format>yyyy-M-d</format>
                            <sort_order>30</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </to>
                        <block_id translate="label">
                            <label>Static Block</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Identifier of static block to be poped up.<br/>Default: newcomer_popup]]></comment>
                            <sort_order>40</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </block_id>
                    </fields>
                </popup>
            </groups>
        </newcomer>
    </sections>
</config>
