                <pay_now module="gri_sales">
                    <label>Pay Now</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Allow Pay Now</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Allow customers to re-place pending payment orders.</comment>
                        </enabled>
                    </fields>
                </pay_now>
                <creditmemo module="gri_sales">
                    <label>Creditmemo Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <two_step translate="label">
                            <label>Two-Step Process</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>If choose "Yes", the creditmemo won't become effective immediately.</comment>
                        </two_step>
                        <notify_before_confirm translate="label">
                            <label>Need Notify 3rd Party Systems Before Refund</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <two_step>1</two_step>
                            </depends>
                            <comment>If choose "Yes", the creditmemo cannot be refunded before 3rd party systems are notified.</comment>
                        </notify_before_confirm>
                    </fields>
                </creditmemo>
