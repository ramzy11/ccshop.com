/**
 * @var $this Mage_Checkout_Block_Cart_Totals
 */
$baseCurrencySymbol = Mage::helper('gri_directory')->getCurrencySymbol(
    Mage::app()->getStore()->getBaseCurrency()
);
?>
<?php if ($this->getTotals()): ?>
<tfoot>
<tr class="spacer"><td colspan="8"></td></tr>
<tr><td colspan="8"><div class="mid_rig_tot"><table width="100%">
    <?php $_colspan = 1; ?>
    <?php echo $this->renderTotals(null, $_colspan); ?>
    <?php echo $this->renderTotals('footer', $_colspan); ?>
    <?php if ($this->needDisplayBaseGrandtotal()):?>
    <tr>
        <td class="a-right" colspan="<?php echo $_colspan; ?>">
            <small><?php echo $this->helper('sales')->__('Grand total in %s to be charged', $baseCurrencySymbol); ?></small>
        </td>
        <td class="a-right">
            <small><?php echo $this->displayBaseGrandtotal() ?></small>
        </td>
    </tr>
    <?php endif?>
</table></div></td></tr>
</tfoot>
<?php endif; ?>
