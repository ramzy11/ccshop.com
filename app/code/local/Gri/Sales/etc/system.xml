<config>
    <sections>
        <sales>
            <groups>
                <auto_cancel_order module="gri_sales">
                    <label>Automatically Order Cancellation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Pending orders will be canceled automatically daily.</comment>
                        </active>
                        <life translate="label">
                            <label>Auto Cancel After Pending Payment for x Minutes</label>
                            <frontend_type>text</frontend_type>
                            <depends>
                                <active>1</active>
                            </depends>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </life>
                    </fields>
                </auto_cancel_order>
