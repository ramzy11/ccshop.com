/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
/* @var $this Gri_Page_Block_Html_Pager */
/* @var $helper Mage_Page_Helper_Data */
$helper = $this->helper('page');
?>
<?php if($this->getCollection()->getSize()): ?>
    <?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>
    <div class="pages">
        <span><?php echo $helper->__('Page %s of %s', $this->getCurrentPage(), $this->getLastPageNum()) ?></span>
        <?php if (!$this->isFirstPage()): ?>
        	 |  <a href="<?php echo $this->getPreviousPageUrl() ?>" ><?php echo $helper->__('Previous Page')?></a>
        <?php endif?>
        <?php if (!$this->isLastPage()): ?>
      	 	 |  <a href="<?php echo $this->getNextPageUrl() ?>" ><?php echo $helper->__('Next Page')?></a>
        <?php endif?>
         |  <a href="<?php echo $this->getLimitUrl('all');?>" ><?php echo $helper->__('View All')?></a>
    </div>
    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>
