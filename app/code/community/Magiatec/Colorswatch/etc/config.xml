<?xml version="1.0"?>

<config>
    <modules>
        <Magiatec_Colorswatch>
            <version>1.0.3</version>
        </Magiatec_Colorswatch>
    </modules>
    <global>
        <models>
            <magiatecolorswatch>
                <class>Magiatec_Colorswatch_Model</class>
                <resourceModel>magiatecolorswatch_resource</resourceModel>
            </magiatecolorswatch>
            <magiatecolorswatch_resource>
                <class>Magiatec_Colorswatch_Model_Resource</class>
                <entities>
                    <product>
                        <table>magiatec_colorswatch_product</table>
                    </product>
                    <attribute>
                        <table>magiatec_colorswatch_attribute</table>
                    </attribute>
                </entities>
            </magiatecolorswatch_resource>
            <catalog>
                <rewrite>
                    <product_attribute_backend_media>Magiatec_Colorswatch_Model_Product_Attribute_Backend_Media</product_attribute_backend_media>
                </rewrite>
            </catalog>
            <eav>
                <rewrite>
                    <entity_attribute_source_table>Magiatec_Colorswatch_Model_Entity_Attribute_Source_Table</entity_attribute_source_table>
                </rewrite>
            </eav>
            <catalog_resource>
                <rewrite>
                    <product_type_configurable_attribute_collection>Magiatec_Colorswatch_Model_Resource_Product_Type_Configurable_Attribute_Collection</product_type_configurable_attribute_collection>
                </rewrite>
            </catalog_resource>
        </models>
        <resources>
            <magiatecolorswatch_setup>
                <setup>
                    <module>Magiatec_Colorswatch</module>
                </setup>
            </magiatecolorswatch_setup>
        </resources>
        <blocks>
            <magiatecolorswatch>
                <class>Magiatec_Colorswatch_Block</class>
            </magiatecolorswatch>
            <catalog>
                <rewrite>
                    <product_view_type_configurable>Magiatec_Colorswatch_Block_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <magiatecolorswatch>
                <class>Magiatec_Colorswatch_Helper</class>
            </magiatecolorswatch>
        </helpers>
        <events>
            <catalog_product_save_after>
                <observers>
                    <magiatecolorswatch_save_images>
                        <type>singleton</type>
                        <class>magiatecolorswatch/observer</class>
                        <method>saveProductSwatches</method>
                    </magiatecolorswatch_save_images>
                </observers>
            </catalog_product_save_after>
            <catalog_entity_attribute_save_after>
                <observers>
                    <magiatecolorswatch_save_images>
                        <type>singleton</type>
                        <class>magiatecolorswatch/observer</class>
                        <method>saveAttributeSwatches</method>
                    </magiatecolorswatch_save_images>
                </observers>
            </catalog_entity_attribute_save_after>
            <core_collection_abstract_load_after>
                <observers>
                    <magiatecolorswatch_load_propduct>
                        <type>singleton</type>
                        <class>magiatecolorswatch/observer</class>
                        <method>loadProductSwatchesToCollection</method>
                    </magiatecolorswatch_load_propduct>
                    <magiatecolorswatch_load_attribute>
                        <type>singleton</type>
                        <class>magiatecolorswatch/observer</class>
                        <method>loadAttributeSwatchesToCollection</method>
                    </magiatecolorswatch_load_attribute>
                </observers>
            </core_collection_abstract_load_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <magiatecolorswatch_block_to_html_after>
                        <type>singleton</type>
                        <class>magiatecolorswatch/observer</class>
                        <method>addSwatchesHtml</method>
                    </magiatecolorswatch_block_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <magiatecolorswatch>
                    <file>magiatec/colorswatch.xml</file>
                </magiatecolorswatch>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <magiatecolorswatch>
                    <file>magiatec/colorswatch.xml</file>
                </magiatecolorswatch>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <magiatecolorswatch>
            <settings>
                <enabled>0</enabled>
                <swatch_width>50</swatch_width>
                <swatch_height>50</swatch_height>
                <show_not_available>0</show_not_available>
            </settings>
            <imageswitcher>
                <enabled>0</enabled>
                <width>265</width>
                <height>265</height>
                <twidth>56</twidth>
                <theight>56</theight>
            </imageswitcher>
            <zoom>
                <enabled>0</enabled>
                <type>standart</type>
                <width>300</width>
                <height>300</height>
                <position>right</position>
                <preload_text>Loading zoom</preload_text>
                <title>0</title>
                <opacity>0.4</opacity>
            </zoom>
        </magiatecolorswatch>
    </default>
</config>
