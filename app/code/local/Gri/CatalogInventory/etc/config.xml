<?xml version="1.0"?>
<config>
    <modules>
        <Gri_CatalogInventory>
            <version>1.0.0</version>
        </Gri_CatalogInventory>
    </modules>
    <global>
        <!--<resources>
            <gri_cataloginventory_setup>
                <setup>
                    <module>Gri_CatalogInventory</module>
                </setup>
            </gri_cataloginventory_setup>
        </resources>-->
        <models>
            <gri_cataloginventory>
                <class>Gri_CatalogInventory_Model</class>
                <resourceModel>gri_cataloginventory_resource</resourceModel>
            </gri_cataloginventory>
            <gri_cataloginventory_resource>
                <class>Gri_CatalogInventory_Model_Resource</class>
                <entities>
                </entities>
            </gri_cataloginventory_resource>
            <cataloginventory>
                <rewrite>
                    <observer>Gri_CatalogInventory_Model_Observer</observer>
                    <stock_item>Gri_CatalogInventory_Model_Stock_Item</stock_item>
                </rewrite>
            </cataloginventory>
        </models>
        <blocks>
            <gri_cataloginventory>
                <class>Gri_CatalogInventory_Block</class>
            </gri_cataloginventory>
        </blocks>
        <helpers>
            <gri_cataloginventory>
                <class>Gri_CatalogInventory_Helper</class>
            </gri_cataloginventory>
        </helpers>
        <catalog>
            <product>
                <type>
                    <grouped>
                        <stock_indexer>gri_cataloginventory/indexer_stock_grouped</stock_indexer>
                    </grouped>
                </type>
            </product>
        </catalog>
        <events>
            <sales_order_invoice_pay>
                <observers>
                    <gri_cataloginventory>
                        <class>gri_cataloginventory/observer</class>
                        <method>subtractQuoteInventoryAfterPaid</method>
                    </gri_cataloginventory>
                </observers>
            </sales_order_invoice_pay>
        </events>
    </global>
</config>
