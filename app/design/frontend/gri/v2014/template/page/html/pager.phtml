/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
/* @var $this Gri_Page_Block_Html_Pager */
/* @var $griPageHelper Gri_Page_Helper_Data */
$griPageHelper = $this->helper('gri_page');
$params = $this->getRequest()->getParams();
?>
<?php if($this->getCollection()->getSize()): ?>
<?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>
    <div class="pages">
        <a class="page-view-all" href="<?php echo $this->getLimitUrl('all');?>" ><?php echo $griPageHelper->__('View All')?></a>
        <?php if (!$this->isFirstPage()): ?>
            <?php if(isset($params['isAjax']) && $params['isAjax'] ==1): ?>
                <a href="javascript:;" onclick="sendFilter('<?php echo $this->getPreviousPageUrl(); ?>')"  class="sf-prev"><<span><?php echo $griPageHelper->__('Prev')?></span></a>
            <?php else: ?>
                <a href="<?php echo $this->getPreviousPageUrl() ?>" class="sf-prev"><<span><?php echo $griPageHelper->__('Prev')?></span></a>
            <?php endif; ?>
        <?php else : ?>
            <a href="javascript:;" class="sf-prev first-page"><<span><?php echo $griPageHelper->__('Prev')?></span></a>
        <?php endif?>
        <span class="sf-page-count"><?php echo $griPageHelper->__('Page %s of %s',$this->getCurrentPage(), $this->getLastPageNum())?></span>
        <span class="page-count"><?php echo $griPageHelper->__('%s of %s', $this->getCurrentPage(), $this->getLastPageNum()) ?></span>
        <?php if (!$this->isLastPage()): ?>
            <?php if(isset($params['isAjax']) && $params['isAjax'] ==1): ?>
                <a href="javascript:;"  onclick="sendFilter('<?php echo $this->getNextPageUrl()?>')"  class="sf-next"><span><?php echo $griPageHelper->__('Next')?></span>></a>
            <?php else: ?>
                <a href="<?php echo $this->getNextPageUrl() ?>"  class="sf-next"><span><?php echo $griPageHelper->__('Next')?></span>></a>
            <?php endif; ?>
        <?php else : ?>
            <a href="javascript:;" class="sf-next last-page"><span><?php echo $griPageHelper->__('Next')?></span>></a>
        <?php endif?>
    </div>
    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>
