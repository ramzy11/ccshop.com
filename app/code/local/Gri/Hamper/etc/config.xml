            </bundle_resource>
            <tax>
                <rewrite>
                    <sales_total_quote_subtotal>Gri_Hamper_Model_Sales_Total_Quote_Subtotal</sales_total_quote_subtotal>
                </rewrite>
            </tax>
        </models>
        <resources>
            <hamper_setup>
                <setup>
                    <module>Gri_Hamper</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </hamper_setup>
        </resources>
        <blocks>
            <hamper>
                <class>Gri_Hamper_Block</class>
            </hamper>
        </blocks>
        <helpers>
            <hamper>
                <class>Gri_Hamper_Helper</class>
            </hamper>
        </helpers>
        <catalog>
            <product>
                <type>
                    <hamper translate="label" module="hamper">
                        <label>Hamper Product</label>
                        <model>hamper/product_type</model>
                        <composite>1</composite>
                        <allowed_selection_types>
                            <simple/>
                            <virtual/>
                            <configurable/>
                        </allowed_selection_types>
                        <price_model>hamper/product_price</price_model>
                        <index_data_retreiver>hamper/catalogIndex_data_hamper</index_data_retreiver>
                        <index_priority>40</index_priority>
                        <price_indexer>hamper/indexer_price</price_indexer>
                        <stock_indexer>hamper/indexer_stock</stock_indexer>
                    </hamper>
                </type>
                <options>
                    <hamper>
                        <types>
                            <checkbox translate="label" module="hamper">
                                <label>Multiple</label>
                            </checkbox>
                            <radio translate="label" module="hamper">
                                <label>Single</label>
                            </radio>
                        </types>
                    </hamper>
                </options>
            </product>
        </catalog>
        <!--<sales>
            <quote>
